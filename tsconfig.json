{
    "compilerOptions": {
      "target": "es2016",
      "jsx": "react",
      "module": "commonjs",
      "rootDir": "./src",
      "typeRoots": ["node_modules/@types", "src/types"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
    },
    "exclude": ["dist", "node_modules"]
  }
  